{
  "manifest_version": 2,
  "name": "Norcom Internet Switch",
  "version": "0.1.1",
  "description": "",
  "homepage_url": "https://github.com/nurtrom/norcom-internet-switch-webextension",
  "icons": {
    "48": "icons/norcom-internet-switch-48.png",
    "96": "icons/norcom-internet-switch-96.png"
  },

  "permissions": [
    "notifications",
    "*://www.norcom.ru/*"
  ],

  "browser_action": {
    "default_icon": "icons/internet-disabled-19.png",
    "default_title": "Включить интернет Norcom"
  },

  "background": {
    "scripts": ["norcom-internet-switch.js"]
  }
}